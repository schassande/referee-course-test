{ translations :
[
{ id: 'euro.level1.Q1',   texts : [ { lang: 'en', text: 'What is the most important concern for a referee?'}, { lang: 'fr', text: 'Qu\'est ce qui est le plus important pour un arbitre ?'} ] },
{ id: 'euro.level1.Q1.A', texts : [ { lang: 'en', text: 'Position on-field.'}, { lang: 'fr', text: 'La position sur le terrain.'} ] },
{ id: 'euro.level1.Q1.B', texts : [ { lang: 'en', text: 'Safety of participants.'}, { lang: 'fr', text: 'La sécurité des joueurs.'} ] },
{ id: 'euro.level1.Q1.C', texts : [ { lang: 'en', text: 'Time management.'}, { lang: 'fr', text: 'La gestion du temps.'} ] },
{ id: 'euro.level1.Q1.D', texts : [ { lang: 'en', text: 'Making the right ruling.'}, { lang: 'fr', text: 'Prendre les bonnes décisions.'} ] },

{ id: 'euro.level1.Q2',   texts : [ { lang: 'en', text: 'Which of the following does not form part of the pre-game player check?'}, { lang: 'fr', text: 'Laquelle de ces propositions ne correspond pas à des vérifications d\'avant-match ?'} ] },
{ id: 'euro.level1.Q2.A', texts : [ { lang: 'en', text: 'Long hair and prescription glasses.'}, { lang: 'fr', text: 'La longueur des cheveux et les lunettes de vue.'} ] },
{ id: 'euro.level1.Q2.B', texts : [ { lang: 'en', text: 'Metal studs and long fingernails.'}, { lang: 'fr', text: 'Les crampons en métal et la longueur des ongles.'} ] },
{ id: 'euro.level1.Q2.C', texts : [ { lang: 'en', text: 'Earrings and exposed piercings.'}, { lang: 'fr', text: 'Les boucles d\'oreille et les piercings visibles.'} ] },
{ id: 'euro.level1.Q2.D', texts : [ { lang: 'en', text: 'Wrist bracelets and jewellery.'}, { lang: 'fr', text: 'Les bracelets et les bijoux.'} ] },

{ id: 'euro.level1.Q3',   texts : [ { lang: 'en', text: 'How is a Mixed team defined?'}, { lang: 'fr', text: 'Comment est définie une équipe mixte ?'} ] },
{ id: 'euro.level1.Q3.A', texts : [ { lang: 'en', text: 'Maximum of 1 male and 3 females.'}, { lang: 'fr', text: 'Maximum 1 homme et 3 femmes.'} ] },
{ id: 'euro.level1.Q3.B', texts : [ { lang: 'en', text: 'Maximum of 3 males, minimum of 1 male and 1 female.'}, { lang: 'fr', text: 'Maximum 3 hommes, minimum 1 homme et 1 femme.'} ] },
{ id: 'euro.level1.Q3.C', texts : [ { lang: 'en', text: 'Minimum of 3 males and maximum of 1 female.'}, { lang: 'fr', text: 'Minimum 3 hommes et maximum 1 femme.'} ] },
{ id: 'euro.level1.Q3.D', texts : [ { lang: 'en', text: 'Minimum of 1 female and a maximum of 3 males.'}, { lang: 'fr', text: 'Minimum 1 femme et maximum 3 hommes.'} ] },

{ id: 'euro.level1.Q4',   texts : [ { lang: 'en', text: 'Which of the following is false?'}, { lang: 'fr', text: 'Laquelle de ces affirmations est fausse ?'} ] },
{ id: 'euro.level1.Q4.A', texts : [ { lang: 'en', text: 'Teams cannot have more than sixteen players.'}, { lang: 'fr', text: 'Les équipes ne peuvent avoir plus de 16 joueurs dans une compétition.'} ] },
{ id: 'euro.level1.Q4.B', texts : [ { lang: 'en', text: 'At least four players must be on-field to start a game.'}, { lang: 'fr', text: 'Au moins 4 joueurs doivent être sur le terrain pour démarrer le match.'} ] },
{ id: 'euro.level1.Q4.C', texts : [ { lang: 'en', text: 'A team with fewer than four players on-field will forfeit the game.'}, { lang: 'fr', text: 'Une équipe de moins de 4 joueurs sur le terrain sera considérée comme forfait pour le match.'} ] },
{ id: 'euro.level1.Q4.D', texts : [ { lang: 'en', text: 'A team can never have more than six players on-field during play.'}, { lang: 'fr', text: 'Une équipe ne peut pas avoir plus de 6 joueurs sur le terrain lors du jeu.'} ] },

{ id: 'euro.level1.Q5',   texts : [ { lang: 'en', text: 'Which of the following is false regarding off-field players?'}, { lang: 'fr', text: 'Laquelle de ces affirmations concernant les remplaçants est fausse ?'} ] },
{ id: 'euro.level1.Q5.A', texts : [ { lang: 'en', text: 'They must stay in the substitution box unless interchanging.'}, { lang: 'fr', text: 'Ils doivent rester dans la box sauf lors des changements.'} ] },
{ id: 'euro.level1.Q5.B', texts : [ { lang: 'en', text: 'They may interchange from anywhere on the sideline so long as they touch.'}, { lang: 'fr', text: 'Ils peuvent changer n\'importe où sur la ligne touche à partir du moment où il y a un contact.'} ] },
{ id: 'euro.level1.Q5.C', texts : [ { lang: 'en', text: 'Teams may share a substitution box, where space is limited.'}, { lang: 'fr', text: 'Les équipes peuvent partager la boite de remplacement lorsque l\'espace est limité.'} ] },
{ id: 'euro.level1.Q5.D', texts : [ { lang: 'en', text: 'Interchanges may occur at any time during play and there is no limit to the number of interchanges.'}, { lang: 'fr', text: 'Les changements peuvent être effectués durant toute la durée du match et ne sont pas limités en nombre'} ] },

{ id: 'euro.level1.Q6',   texts : [ { lang: 'en', text: 'Which of the following statements about the winning captain\'s rights is false?'}, { lang: 'fr', text: 'Laquelle de ces phrases concernant le capitaine qui gagne le toss est fausse ?'} ] },
{ id: 'euro.level1.Q6.A', texts : [ { lang: 'en', text: 'She can start the game as an off-field player.'}, { lang: 'fr', text: 'Peut commencer le match comme remplacent.'} ] },
{ id: 'euro.level1.Q6.B', texts : [ { lang: 'en', text: 'She has the choice between substitution boxes.'}, { lang: 'fr', text: 'A le choix de la boite de remplacement.'} ] },
{ id: 'euro.level1.Q6.C', texts : [ { lang: 'en', text: 'She has the choice of whether to tap off or give the ball up to the opposition;.'}, { lang: 'fr', text: 'A le choix d\'engager ou de laisser le ballon à l\'adversaire.'} ] },
{ id: 'euro.level1.Q6.D', texts : [ { lang: 'en', text: 'She has the choice on which direction to play.'}, { lang: 'fr', text: 'A le choix de la direction du jeu.'} ] },

{ id: 'euro.level1.Q7',   texts : [ { lang: 'en', text: 'The toss must to be conducted when both captains and the referees are all together. Why?'}, { lang: 'fr', text: 'Le toss doit être effectué en présence des deux capitaines et des arbitres. Pourquoi ?'} ] },
{ id: 'euro.level1.Q7.A', texts : [ { lang: 'en', text: 'It is necessary to give authority to the referees.'}, { lang: 'fr', text: 'C\'est nécessaire pour donner de l\'autorité aux arbitres.'} ] },
{ id: 'euro.level1.Q7.B', texts : [ { lang: 'en', text: 'Because captains cannot be trusted.'}, { lang: 'fr', text: 'Parce qu\'on ne peut pas faire confiance aux capitaines.'} ] },
{ id: 'euro.level1.Q7.C', texts : [ { lang: 'en', text: 'Introductions must be made before the toss is started.'}, { lang: 'fr', text: 'Les présentations doivent être faites avant le toss.'} ] },
{ id: 'euro.level1.Q7.D', texts : [ { lang: 'en', text: 'It ensures fairness to both teams and avoids the possibility of conflict later.'}, { lang: 'fr', text: 'Cela assure l\'équité entre les deux équipes et évite la possibilité d\'un conflit ultérieur.'} ] },

{ id: 'euro.level1.Q8',   texts : [ { lang: 'en', text: 'Which of the following situations would not help create good rapport prior to starting a game?'}, { lang: 'fr', text: 'Laquelle de ces situations n\'aide pas à construire une bonne relation avant le début d\'un match ?'} ] },
{ id: 'euro.level1.Q8.A', texts : [ { lang: 'en', text: 'Going to each team\'s box to conduct the safety check.'}, { lang: 'fr', text: 'Aller dans chaque boite de remplacement pour effectuer les vérifications de sécurité.'} ] },
{ id: 'euro.level1.Q8.B', texts : [ { lang: 'en', text: 'Wearing a clean and tidy uniform including your badge.'}, { lang: 'fr', text: 'Porter un uniforme propre et approprié comprenant votre badge.'} ] },
{ id: 'euro.level1.Q8.C', texts : [ { lang: 'en', text: 'Arriving on time as a team.'}, { lang: 'fr', text: 'Arriver à l\'heure et ensemble.'} ] },
{ id: 'euro.level1.Q8.D', texts : [ { lang: 'en', text: 'Giving detailed instructions to every player prior to conducting the toss'}, { lang: 'fr', text: 'Donner des indications très détaillées à chaque joueur avant de faire le toss.'} ] },

{ id: 'euro.level1.Q9',   texts : [ { lang: 'en', text: 'Which is true?'}, { lang: 'fr', text: 'Laquelle de ces affirmations est vraie ?'} ] },
{ id: 'euro.level1.Q9.A', texts : [ { lang: 'en', text: 'The ball does not need to be on the ground when tapped.'}, { lang: 'fr', text: 'Le ballon n\'a pas besoin d\'être au sol pour être tapé'} ] },
{ id: 'euro.level1.Q9.B', texts : [ { lang: 'en', text: 'The ball can be held in the hands when tapped with the foot.'}, { lang: 'fr', text: 'Le ballon peut être tenu à la main lorsqu\'il est tapé au pied.'} ] },
{ id: 'euro.level1.Q9.C', texts : [ { lang: 'en', text: 'The ball can roll up to one metre from the Tap.'}, { lang: 'fr', text: 'Le ballon peut rouler jusqu\'à 1 mètre depuis la marque du tapball.'} ] },
{ id: 'euro.level1.Q9.D', texts : [ { lang: 'en', text: 'You may not use a rollball instead of a Tap.'}, { lang: 'fr', text: 'Vous ne pouvez pas jouer un rollball à la place d\'un tapball.'} ] },

{ id: 'euro.level1.Q10',   texts : [ { lang: 'en', text: 'Which is false?'}, { lang: 'fr', text: 'Laquelle de ces affirmations est fausse ?'} ] },
{ id: 'euro.level1.Q10.A', texts : [ { lang: 'en', text: 'A Touch can be made by the attacker or the defender.'}, { lang: 'fr', text: 'Un touch peut être effectué par un attaquant ou un défenseur.'} ] },
{ id: 'euro.level1.Q10.B', texts : [ { lang: 'en', text: 'The Touch can be made on any part of the body.'}, { lang: 'fr', text: 'Un touch peut être effectué sur toutes les parties du corps.'} ] },
{ id: 'euro.level1.Q10.C', texts : [ { lang: 'en', text: 'Contact with the ball is not a Touch.'}, { lang: 'fr', text: 'Un contact avec le ballon n\'est pas un touch.'} ] },
{ id: 'euro.level1.Q10.D', texts : [ { lang: 'en', text: 'A Touch can be made on the hat or hair.'}, { lang: 'fr', text: 'Un touch peut être effectué sur la casquette ou les cheveux.'} ] },

{ id: 'euro.level1.Q11',   texts : [ { lang: 'en', text: 'Which of these is false for a rollball?'}, { lang: 'fr', text: 'Laquelle de ces affirmations concernant le rollball est fausse ?'} ] },
{ id: 'euro.level1.Q11.A', texts : [ { lang: 'en', text: 'The body must be facing the scoreline.'}, { lang: 'fr', text: 'Le corps doit être face à la ligne d\'essai'} ] },
{ id: 'euro.level1.Q11.B', texts : [ { lang: 'en', text: 'The ball can be dropped from the hand above the ground.'}, { lang: 'fr', text: 'Le ballon peut être lâché des mains au-dessus du sol.'} ] },
{ id: 'euro.level1.Q11.C', texts : [ { lang: 'en', text: 'The body or the foot must pass over the ball.'}, { lang: 'fr', text: 'Le corps ou le pied doit passer au-dessus du ballon.'} ] },
{ id: 'euro.level1.Q11.D', texts : [ { lang: 'en', text: 'If it rolls, the ball cannot roll more than 1m.'}, { lang: 'fr', text: 'Le ballon ne peut pas rouler sur plus d\'un mètre.'} ] },

{ id: 'euro.level1.Q12',   texts : [ { lang: 'en', text: 'An attacker is touched in-field near a sideline. After being touched, the attacker steps over the sideline. What is the correct ruling?'}, { lang: 'fr', text: 'Un attaquant est touché dans le terrain proche de la ligne de touche. Après avoir été touché et avant de jouer son rollball, il sort des limites du terrain. Quelle est la bonne décision ?'} ] },
{ id: 'euro.level1.Q12.A', texts : [ { lang: 'en', text: 'A change of possession restarting 5m in-field from the sideline.'}, { lang: 'fr', text: 'Changement de possession, le jeu reprend à 5m à l\'intérieur du terrain.'} ] },
{ id: 'euro.level1.Q12.B', texts : [ { lang: 'en', text: 'A change of possession where the Touch occurred.'}, { lang: 'fr', text: 'Changement de possession à l\'endroit du touch.'} ] },
{ id: 'euro.level1.Q12.C', texts : [ { lang: 'en', text: 'Attacker retains possession with a rollball 5m in-field from the sideline.'}, { lang: 'fr', text: 'L\'attaquant garde la possession et joue un rollball 5m à l\'intérieur du terrain.'} ] },
{ id: 'euro.level1.Q12.D', texts : [ { lang: 'en', text: 'Attacker retains possession with a rollball where the Touch occurred.'}, { lang: 'fr', text: 'L\'attaquant garde la possession et joue un rollball à l\'endroit du touch.'} ] },

{ id: 'euro.level1.Q13',   texts : [ { lang: 'en', text: 'Immediately after the third touch which of these statements is false?'}, { lang: 'fr', text: 'Immédiatement après le 3ème touch, laquelle de ces affirmations est fausse ?'} ] },
{ id: 'euro.level1.Q13.A', texts : [ { lang: 'en', text: 'The control referee should be positioned at the new defensive line.'}, { lang: 'fr', text: 'L\'arbitre central doit être positionné sur la nouvelle ligne de défense.'} ] },
{ id: 'euro.level1.Q13.B', texts : [ { lang: 'en', text: 'The support referees should be in line with the control referee.'}, { lang: 'fr', text: 'L\'arbitre assistant doit être aligné avec l\'arbitre central.'} ] },
{ id: 'euro.level1.Q13.C', texts : [ { lang: 'en', text: 'The control referee must ensure defenders reach the new defensive line before declaring them to be on-side.'}, { lang: 'fr', text: 'L\'arbitre central doit s\'assurer que les défenseurs atteignent la nouvelle ligne de défense avant de les annoncer en-jeu.'} ] },
{ id: 'euro.level1.Q13.D', texts : [ { lang: 'en', text: 'The control referee is best positioned directly in front of the roll ball.'}, { lang: 'fr', text: 'L\'arbitre central est le mieux placé directement en face du rollball.'} ] },

{ id: 'euro.level1.Q14',   texts : [ { lang: 'en', text: 'Where is the mark for a rollball in the general field of play?'}, { lang: 'fr', text: 'Où est la marque pour un rollball dans jeu courant ?'} ] },
{ id: 'euro.level1.Q14.A', texts : [ { lang: 'en', text: 'Within one or two metres of where the contact occurred.'}, { lang: 'fr', text: 'Entre 1 et 2 mètres de l\'endroit où le contact a eu lieu.'} ] },
{ id: 'euro.level1.Q14.B', texts : [ { lang: 'en', text: 'The position of the defender when the Touch occurred.'}, { lang: 'fr', text: 'À la position du défenseur lorsque le touch est effectué'} ] },
{ id: 'euro.level1.Q14.C', texts : [ { lang: 'en', text: 'The position of the attacker when the Touch occurred.'}, { lang: 'fr', text: 'À la vertical du point de contact correspondant au touch effectué'} ] },
{ id: 'euro.level1.Q14.D', texts : [ { lang: 'en', text: 'Where the contact was made, but at least 5m from the scoreline and sideline.'}, { lang: 'fr', text: 'Où le contact a été fait mais à au moins 5 m des lignes d\'essai et de touche'} ] },

{ id: 'euro.level1.Q15',   texts : [ { lang: 'en', text: 'The ball goes to ground. Where does the restart rollball occur?'}, { lang: 'fr', text: 'Lors d\'un ballon tombé, où le rollball doit-il être joué ?'} ] },
{ id: 'euro.level1.Q15.A', texts : [ { lang: 'en', text: 'Where the ball first hit the ground.'}, { lang: 'fr', text: 'Où le ballon a touché le sol pour la première fois'} ] },
{ id: 'euro.level1.Q15.B', texts : [ { lang: 'en', text: 'Where the ball stops rolling.'}, { lang: 'fr', text: 'Où le ballon s\'arrête de rouler.'} ] },
{ id: 'euro.level1.Q15.C', texts : [ { lang: 'en', text: 'At any point in the ball\'s roll.'}, { lang: 'fr', text: 'À n\'importe quel endroit où le ballon a roulé'} ] },
{ id: 'euro.level1.Q15.D', texts : [ { lang: 'en', text: 'At the location of any player who is given the ball.'}, { lang: 'fr', text: 'Où le joueur récupère le ballon.'} ] },

{ id: 'euro.level1.Q16',   texts : [ { lang: 'en', text: 'An attacking Half who is in possession steps outside of the field of play over the dead ball line. What happens next?'}, { lang: 'fr', text: 'Un attaquant, qui est le demi, sort des limites du terrain en dépassant la ligne de ballon mort. Que se passe-t-il ensuite ?'} ] },
{ id: 'euro.level1.Q16.A', texts : [ { lang: 'en', text: 'Attacker keeps possession, rollball on the 5m line.'}, { lang: 'fr', text: 'L\'attaque conserve la possession, rollball sur la ligne des 5m.'} ] },
{ id: 'euro.level1.Q16.B', texts : [ { lang: 'en', text: 'Attacker keeps possession, rollball between the scoreline and 5m line.'}, { lang: 'fr', text: 'L\'attaque conserve la possession, rollball entre la ligne d\'essai et la ligne des 5m.'} ] },
{ id: 'euro.level1.Q16.C', texts : [ { lang: 'en', text: 'Change of possession, rollball on the scoreline.'}, { lang: 'fr', text: 'Changement de possession, rollball sur la ligne d\'essai.'} ] },
{ id: 'euro.level1.Q16.D', texts : [ { lang: 'en', text: 'Change of possession, rollball on the 5m line.'}, { lang: 'fr', text: 'Changement de possession, rollball sur la ligne des 5m.'} ] },

{ id: 'euro.level1.Q17',   texts : [ { lang: 'en', text: 'Which of these groups includes only penalty situations?'}, { lang: 'fr', text: 'Laquelle de ses combinaisons présente que des situations de pénalités?'} ] },
{ id: 'euro.level1.Q17.A', texts : [ { lang: 'en', text: 'Hard touch, Touch and Pass, Obstruction.'}, { lang: 'fr', text: 'Jeu rugueux, Late pass, Obstruction.'} ] },
{ id: 'euro.level1.Q17.B', texts : [ { lang: 'en', text: 'Offside, rollball Over the Mark, Half Caught in the end zone.'}, { lang: 'fr', text: 'Hors-jeu, rollball pas sur la marque, demi touché dans la zone d\'essai.'} ] },
{ id: 'euro.level1.Q17.C', texts : [ { lang: 'en', text: 'Forward Pass, rollball Not Square, Voluntary Rollball.'}, { lang: 'fr', text: 'Passe en-avant, rollball pas droit, Rollball volontaire.'} ] },
{ id: 'euro.level1.Q17.D', texts : [ { lang: 'en', text: 'Phantom touch, Incorrect roll ball, Delay of play.'}, { lang: 'fr', text: 'Phantom touch, Rollball incorrect, Retarder le jeu.'} ] },

{ id: 'euro.level1.Q18',   texts : [ { lang: 'en', text: 'A forward pass occurs. Where is the mark?'}, { lang: 'fr', text: 'Où est la marque sur une passe en-avant ?'} ] },
{ id: 'euro.level1.Q18.A', texts : [ { lang: 'en', text: 'The location of the passer who made the Forward pass.'}, { lang: 'fr', text: 'A l\'endroit où le passeur a effectué l\'en avant.'} ] },
{ id: 'euro.level1.Q18.B', texts : [ { lang: 'en', text: 'Where the forward pass was caught, or where the ball hit the ground.'}, { lang: 'fr', text: 'A l\'endroit où le ballon est réceptionné ou où le ballon touche le sol.'} ] },
{ id: 'euro.level1.Q18.C', texts : [ { lang: 'en', text: 'Where the pass receiver should have been if the pass wasn\'t forward.'}, { lang: 'fr', text: 'A l\'endroit où le receveur aurait dû être si la passe n\'avait pas été en-avant.'} ] },
{ id: 'euro.level1.Q18.D', texts : [ { lang: 'en', text: 'Whichever attacker is furthest forward at the time the ball was thrown.'}, { lang: 'fr', text: 'A la position de l\'attaquant le plus avancé au moment de la passe.'} ] },

{ id: 'euro.level1.Q19',   texts : [ { lang: 'en', text: 'When defending players are near their scoreline, which of the following statements are true?<br>X. A defender must have one foot on or behind the line to be onside.<br>Y. After a rollball all defenders must move forward until a Touch is imminent.'}, { lang: 'fr', text: 'Lorsque qu\'un rollball est joué dans la zone des 5m, lesquelles de ces affirmations sont vraies ou fausses ?<br>X. Un défenseur doit avoir 1 (un) pied sur ou derrière la ligne pour être en jeu. <br>Y. Après un rollball tous les défenseurs doivent avancer jusqu\'à l\'imminence du touch.'} ] },
{ id: 'euro.level1.Q19.A', texts : [ { lang: 'en', text: 'Both X and Y are true.'}, { lang: 'fr', text: 'X et Y sont toutes deux vraies.'} ] },
{ id: 'euro.level1.Q19.B', texts : [ { lang: 'en', text: 'Both X and Y are false.'}, { lang: 'fr', text: 'X et Y sont toutes deux fausses.'} ] },
{ id: 'euro.level1.Q19.C', texts : [ { lang: 'en', text: 'Only X is true.'}, { lang: 'fr', text: 'Seulement X est vraie.'} ] },
{ id: 'euro.level1.Q19.D', texts : [ { lang: 'en', text: 'Only Y is true.'}, { lang: 'fr', text: 'Seulement Y est vraie.'} ] },

{ id: 'euro.level1.Q20',   texts : [ { lang: 'en', text: 'The onside position is set by the referee on the score line, and the defenders are instructed to move forward after the rollball. Which is true?'}, { lang: 'fr', text: 'La ligne de hors-jeu est fixée par l\'arbitre sur la ligne d\'essai. Il est annoncé aux défenseurs qu\'ils doivent avancer lorsque le rollball est joué. Laquelle de ces affirmations est vraie ?'} ] },
{ id: 'euro.level1.Q20.A', texts : [ { lang: 'en', text: 'Each defender can stop when they reach their opposing player.'}, { lang: 'fr', text: 'Chaque défenseur peut s\'arrêter quand il est à hauteur de son vis à vis.'} ] },
{ id: 'euro.level1.Q20.B', texts : [ { lang: 'en', text: 'All defenders must advance until a Touch is imminent, the ball comes within the 5m line or they are in line with the ball.'}, { lang: 'fr', text: 'Tous les défenseurs doivent avancer jusqu\'à ce que le touch soit imminent, que le ballon rentre dans les 5m ou qu\'ils soient à hauteur du porteur du ballon'} ] },
{ id: 'euro.level1.Q20.C', texts : [ { lang: 'en', text: 'Defenders cannot be penalised unless they are instructed to advance by one of the referees.'}, { lang: 'fr', text: 'Un défenseur ne peut être pénalisé que s\'il a été averti par l\'un des arbitres qu\'il doit avancer.'} ] },
{ id: 'euro.level1.Q20.D', texts : [ { lang: 'en', text: 'Defenders must move forward at any speed but can stop at the 5m line.'}, { lang: 'fr', text: 'Les défenseurs peuvent monter à la vitesse de leur choix et peuvent s\'arrêter au niveau de la ligne des 5m.'} ] },

{ id: 'euro.level1.Q21',   texts : [ { lang: 'en', text: 'A game is marked as requiring a result. The game ends with a draw, so a Dropoff is played. Are the following statements true or false?<br>X. Both teams must have had Possession before a winner is decided.<br>Y. Player count is reduced by one at the restart and at 2 and 4 minutes after the restart, unless a team only has three players.'}, { lang: 'fr', text: 'Lors d\'un match pour lequel un vainqueur doit être désigné, le score est à égalité à la fin du temps réglementaire. Un dropoff est joué. Lesquelles de ces affirmations sont vraies ou fausses?<br>X. Les 2 équipes doivent avoir eu 1 (une) possession avant que le vainqueur soit désigné.<br>Y. Le nombre de joueur est réduit de 1 (un) au redémarrage du match, au bout de 2 et 4 minutes sauf si une équipe n\'a plus que 3 joueurs sur le terrain.'} ] },
{ id: 'euro.level1.Q21.A', texts : [ { lang: 'en', text: 'Both X and Y are true.'}, { lang: 'fr', text: 'X et Y sont toutes deux vraies.'} ] },
{ id: 'euro.level1.Q21.B', texts : [ { lang: 'en', text: 'Both X and Y are false.'}, { lang: 'fr', text: 'X et Y sont toutes deux fausses.'} ] },
{ id: 'euro.level1.Q21.C', texts : [ { lang: 'en', text: 'Only X is true.'}, { lang: 'fr', text: 'Seulement X est vraie.'} ] },
{ id: 'euro.level1.Q21.D', texts : [ { lang: 'en', text: 'Only Y is true.'}, { lang: 'fr', text: 'Seulement Y est vraie.'} ] },

{ id: 'euro.level1.Q22',   texts : [ { lang: 'en', text: 'Of these, which is the preferred Touchdown procedure?'}, { lang: 'fr', text: 'Laquelle de ces propositions est la meilleure procédure pour accorder un essai ?'} ] },
{ id: 'euro.level1.Q22.A', texts : [ { lang: 'en', text: 'Check with support referees, check for claimed Touches, award Touchdown.'}, { lang: 'fr', text: 'Vérifier avec les arbitres de touche, vérifier si un toucher est annoncé, accorder l\'essai.'} ] },
{ id: 'euro.level1.Q22.B', texts : [ { lang: 'en', text: 'Check claimed Touches and support referees infringements, award Touchdown, mark the scorecard.'}, { lang: 'fr', text: 'Vérifier si un toucher est annoncé et vérifier les infractions avec les arbitres de touche, accorder l\'essai, remplir la feuille de score.'} ] },
{ id: 'euro.level1.Q22.C', texts : [ { lang: 'en', text: 'Award the Touchdown, mark the scorecard, drink some water.'}, { lang: 'fr', text: 'Accorder l\'essai, marquer le feuille de score, boire de l\'eau.'} ] },
{ id: 'euro.level1.Q22.D', texts : [ { lang: 'en', text: 'Award the Touchdown, check with support referees, mark the scorecard.'}, { lang: 'fr', text: 'Accorder l\'essai, vérifier avec les arbitres de touche, remplir la feuille de score'} ] },

{ id: 'euro.level1.Q23',   texts : [ { lang: 'en', text: 'Which of the following statements is true?'}, { lang: 'fr', text: 'Laquelle de ces affirmations est vraie?'} ] },
{ id: 'euro.level1.Q23.A', texts : [ { lang: 'en', text: 'The Half can score a Touchdown so long as it is not the sixth touch.'}, { lang: 'fr', text: 'Le demi peut marquer un essai tant que ce n\'est pas le sixième toucher.'} ] },
{ id: 'euro.level1.Q23.B', texts : [ { lang: 'en', text: 'The Half can keep playing if they make a touchdown by mistake so long as they do not release the ball.'}, { lang: 'fr', text: 'Le demi peut continuer de jouer s\'il a marqué par erreur du moment qu\'il n\'a pas relâché le ballon.'} ] },
{ id: 'euro.level1.Q23.C', texts : [ { lang: 'en', text: 'The Half is not allowed to score or attempt to score a Touchdown.'}, { lang: 'fr', text: 'Le demi n\'est pas autorisé à marquer où essayer de marquer un essai.'} ] },
{ id: 'euro.level1.Q23.D', texts : [ { lang: 'en', text: 'The Half is the only person who can score a Touchdown.'}, { lang: 'fr', text: 'Le demi est la seule personne qui peut marquer un essai.'} ] },

{ id: 'euro.level1.Q24',   texts : [ { lang: 'en', text: 'When a touch is imminent, how far back should the control referee be positioned during general play?'}, { lang: 'fr', text: 'Lors de l\'imminence du toucher, à quelle distance l\'arbitre central doit être positionné dans le jeu courant ?'} ] },
{ id: 'euro.level1.Q24.A', texts : [ { lang: 'en', text: 'Anywhere convenient to allow communication with offside players.'}, { lang: 'fr', text: 'N\'importe quel endroit qui permette la communication avec les joueurs hors-jeu.'} ] },
{ id: 'euro.level1.Q24.B', texts : [ { lang: 'en', text: 'Behind the defence to see player numbers more easily.'}, { lang: 'fr', text: 'Derrière la défense pour voir le numéro des joueurs facilement.'} ] },
{ id: 'euro.level1.Q24.C', texts : [ { lang: 'en', text: 'At the new 5m line so that players and referees know where is onside.'}, { lang: 'fr', text: 'Sur les prochains 5m pour que les joueurs et les arbitres sachent où est la ligne de hors-jeu. '} ] },
{ id: 'euro.level1.Q24.D', texts : [ { lang: 'en', text: 'Between the two teams to see the rollball clearly and to stay clear of collisions.'}, { lang: 'fr', text: 'Entre les deux équipes pour voir clairement le rollball et éviter les collisions.'} ] },

{ id: 'euro.level1.Q25',   texts : [ { lang: 'en', text: 'Calling an offside player\'s number is not having any effect. Which of these options is the preferred choice?'}, { lang: 'fr', text: 'Lorsqu\'un arbitre n\'obtient pas de réponse en appelant les joueurs hors-jeu par leurs numéros laquelle de ces options va-t-il utiliser ?'} ] },
{ id: 'euro.level1.Q25.A', texts : [ { lang: 'en', text: 'Stop the game, call the player over and tell them to listen to you.'}, { lang: 'fr', text: 'Arrêter le jeu, appeler le joueur, lui rappeler son N° et lui dire d\'écouter'} ] },
{ id: 'euro.level1.Q25.B', texts : [ { lang: 'en', text: 'Get their attention by tapping them on the shoulder.'}, { lang: 'fr', text: 'Obtenir son attention en lui tapant sur l\'épaule.'} ] },
{ id: 'euro.level1.Q25.C', texts : [ { lang: 'en', text: 'Penalise the player and tell them to learn their number.'}, { lang: 'fr', text: 'Pénaliser le joueur et lui dire d\'apprendre son numéro (en anglais).'} ] },
{ id: 'euro.level1.Q25.D', texts : [ { lang: 'en', text: 'Change your communication to identify them by position or name.'}, { lang: 'fr', text: 'Changer sa communication et identifier le joueur par sa position ou son nom.'} ] },

{ id: 'euro.level1.Q26',   texts : [ { lang: 'en', text: 'A defending player makes a hard Touch on the ball-carrier. This is the first time this has happened in this game. Should the referee blow a penalty?'}, { lang: 'fr', text: 'Un défenseur vient de commettre un toucher rugueux sur le porteur du ballon. C\'est la première fois que cela arrive dans le match. Est-ce que l\'arbitre doit siffler une pénalité?'} ] },
{ id: 'euro.level1.Q26.A', texts : [ { lang: 'en', text: 'Yes, hard Touches should be dealt with immediately.'}, { lang: 'fr', text: 'Oui, un toucher rugueux doit être traité immédiatement.'} ] },
{ id: 'euro.level1.Q26.B', texts : [ { lang: 'en', text: 'Yes, and the player should be Forced Substituted.'}, { lang: 'fr', text: 'Oui, il doit aussi appeler un remplacement forcé à l\'encontre du joueur.'} ] },
{ id: 'euro.level1.Q26.C', texts : [ { lang: 'en', text: 'No, the referee can warn the player on the run to prevent it happening again.'}, { lang: 'fr', text: 'Non, l\'arbitre peut avertir le joueur dans le jeu courant pour éviter une récidive.'} ] },
{ id: 'euro.level1.Q26.D', texts : [ { lang: 'en', text: 'No, the referee should stop the game and speak to the player but should continue without a penalty.'}, { lang: 'fr', text: 'Non, l\'arbitre va arrêter le jeu, parler au joueur et recommencer le jeu sans pénalité.'} ] },

{ id: 'euro.level1.Q27',   texts : [ { lang: 'en', text: 'What is a good way to prevent conflict from rising during a game?'}, { lang: 'fr', text: 'Quelle est la bonne manière d\'éviter l\'apparition d\'un conflit au cours du jeu ?'} ] },
{ id: 'euro.level1.Q27.A', texts : [ { lang: 'en', text: 'Stop the game and ask the captains to help maintain discipline.'}, { lang: 'fr', text: 'Stopper le match et demander aux capitaines d\'aider à maintenir la discipline.'} ] },
{ id: 'euro.level1.Q27.B', texts : [ { lang: 'en', text: 'Be strict but polite. Use escalation to avoid repeated bad behaviour.'}, { lang: 'fr', text: 'Être strict mais poli. Utiliser l\'escalade des sanctions pour éviter toute récidive de mauvais comportement.'} ] },
{ id: 'euro.level1.Q27.C', texts : [ { lang: 'en', text: 'Use positive voice communications such as to encourage players to treat each other respectfully.'}, { lang: 'fr', text: 'Utiliser une communication orale positive comme encourager les joueurs à se traiter avec respect.'} ] },
{ id: 'euro.level1.Q27.D', texts : [ { lang: 'en', text: 'All of the above.'}, { lang: 'fr', text: 'Toutes ces propositions.'} ] },

{ id: 'euro.level1.Q28',   texts : [ { lang: 'en', text: 'The full-time hooter sounds while the ball is in the air. Which of the following actions is correct for the referee?'}, { lang: 'fr', text: 'La sirène de fin du match sonne lorsque le ballon est en l\'air. Laquelle de ces propositions est l\'action appropriée pour l\'arbitre ?'} ] },
{ id: 'euro.level1.Q28.A', texts : [ { lang: 'en', text: 'Signal full time immediately without finishing the current play.'}, { lang: 'fr', text: 'Siffler la fin du temps immédiatement sans finir l\'action en cours'} ] },
{ id: 'euro.level1.Q28.B', texts : [ { lang: 'en', text: 'End the game when the next Touchdown is scored. A dropoff may be required.'}, { lang: 'fr', text: 'Terminer le match lorsque le prochain essai est marqué.  Un drop-off peut être requis.'} ] },
{ id: 'euro.level1.Q28.C', texts : [ { lang: 'en', text: 'Let the play continue to the next touch, then announce “Last Touch” and play one final touch.'}, { lang: 'fr', text: 'Laisser le jeu se poursuivre jusqu\'au prochain toucher, puis annoncer “Dernier Toucher” et laisser jouer un dernier toucher.'} ] },
{ id: 'euro.level1.Q28.D', texts : [ { lang: 'en', text: 'So long as there is no penalty, end the game at the next Touch or change of possession. A dropoff may be required.'}, { lang: 'fr', text: 'S\'il n\'y a pas de pénalité, terminer le match après le toucher ou changement de possession suivant. Un drop-off peut être requis.'} ] },

{ id: 'euro.level1.Q29',   texts : [ { lang: 'en', text: 'Which of the following is not a good opportunity to interchange with a buddy referee?'}, { lang: 'fr', text: 'Laquelle de ces propositions n\'est pas une bonne opportunité pour changer avec un camarade arbitre ?'} ] },
{ id: 'euro.level1.Q29.A', texts : [ { lang: 'en', text: 'At a penalty.'}, { lang: 'fr', text: 'Sur une pénalité'} ] },
{ id: 'euro.level1.Q29.B', texts : [ { lang: 'en', text: 'When the ball is in the middle of the field.'}, { lang: 'fr', text: 'Quand le ballon est au milieu du terrain.'} ] },
{ id: 'euro.level1.Q29.C', texts : [ { lang: 'en', text: 'At a touchdown.'}, { lang: 'fr', text: 'Sur un essai.'} ] },
{ id: 'euro.level1.Q29.D', texts : [ { lang: 'en', text: 'When there is a changeover close to the sideline.'}, { lang: 'fr', text: 'Quand il y a un changement de possession près de la ligne de touche'} ] },

{ id: 'euro.level1.Q30',   texts : [ { lang: 'en', text: 'In a dropoff, which of the following is true?'}, { lang: 'fr', text: 'Lors d\'un drop off, laquelle de ces affirmations est vraie?'} ] },
{ id: 'euro.level1.Q30.A', texts : [ { lang: 'en', text: 'Both teams must have possession before the game ends.'}, { lang: 'fr', text: 'Les deux équipes doivent avoir eu 1 possession avant la fin du match.'} ] },
{ id: 'euro.level1.Q30.B', texts : [ { lang: 'en', text: 'There is a time limit to the dropoff.'}, { lang: 'fr', text: 'Le drop off est limité dans le temps.'} ] },
{ id: 'euro.level1.Q30.C', texts : [ { lang: 'en', text: 'A mixed team can have an all-male team once they are down to three players.'}, { lang: 'fr', text: 'Une équipe mixte peut jouer avec uniquement des hommes lorsque qu\'il ne reste plus que 3 joueurs de champ.'} ] },
{ id: 'euro.level1.Q30.D', texts : [ { lang: 'en', text: 'Each time a team moves ahead on the scoreboard, the opponent gets a chance to equal the score.'}, { lang: 'fr', text: 'Lorsqu\'un essai est marqué, l\'adversaire dispose toujours d\'un droit de réponse (1 possession).'} ] },
];
}